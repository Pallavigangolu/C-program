#include <stdio.h>

int isPalindrome(int n) {
    int rev = 0, temp = n;

    while (temp != 0) {
        rev = rev * 10 + temp % 10;
        temp = temp / 10;
    }

    if (rev == n)
        return 1;   // Palindrome
    else
        return 0;   // Not Palindrome
}

int main() {
    int num;

    printf("Enter a number: ");
    scanf("%d", &num);

    if (isPalindrome(num))
        printf("Palindrome number");
    else
        printf("Not a palindrome number");

    return 0;
}
